{% extends "mainTwig.twig" %}
{% block content %}
	<div class="container">
		<div class="row g-4">
			{% for object in objects %}
				<div class="col-3">
					<div class="card" style="width: 18rem;" >
						<img src="{{object.image}}" style="width:250px"/>
						<div class="card-body">
							<div class="row">
								<a href="/object/{{object.id}}/image" class="btn btn-primary" style="flex-grow: 1">{{object.title}}</a>
							</div>
							<div class="container mx-auto" style="text-align: center;">
								<a href="/object/{{object.id}}/history">история</a>
								<a href="/object/{{object.id}}/image">картинка</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
